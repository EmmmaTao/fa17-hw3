<%= form_tag students_path do %>
  <%= label_tag(:student_name, "Student name") %>
  <%= text_field_tag(:student_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:age, nil, placeholder: @placeholder_age) %>

  <%= label_tag(:fav_num, "Favorite Number") %>
  <%= number_field(:fav_num, "", min: 0, max: 9) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create stduent") %>
<% end %>